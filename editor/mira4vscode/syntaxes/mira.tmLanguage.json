
{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "mira",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#globalKeywords"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#intrinsics"
		},
		{
			"include": "#specifiers"
		},
		{
			"include": "#numerics"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"match": "\/\\*.+?\\*\/|\/\/.*(?=[\n\r])"
				},
				{
					"name": "comment.line.double-slash",
					"match": ";*.+?\\*\/|;.*(?=[\n\r])"
				},
				{
					"name": "comment.block",
					"begin": "\\/\\*",
					"end": "\\*\\/"
				}
			]
		},
		"globalKeywords": {
			"patterns": [{
				"name": "entity.name.tag",
				"match": "\\b(sec|func|req|ret|mem|str|as)\\b"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.mira",
				"match": "\\b(if|else|loop)\\b"
			}]
		},
		"intrinsics": {
			"patterns": [{
				"name": "variable.name",
				"match": "\\b(TODO)\\b"
			}]
		},
		"specifiers": {
			"patterns": [{
				"name": "entity.name.type",
				"match": "\\b(u08|u16|u32|u64|i08|i16|i32|i64|f32|f64|ptr)\\b"
			}]
		},
		"numerics": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\b([-+]\\d+|\\d+)\\b"
			}]
		},
		"functions": {
			"patterns": [{
				"name": "entity.name.function",
				"match": "\\w+|\\w+\\s+"
			}]
		},
		"strings": {
			"name": "string.quoted.double.mira",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.mira",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.mira"
}
